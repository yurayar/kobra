= simple_form_for([:admin, @service]) do |f|
  .form-inputs
    = f.label :name
    = f.text_field :name
    = f.label :description
    = f.text_area :description
    = f.label :picture
    = f.file_field :picture
    = f.label :price
    = f.text_field :price
    = f.input :featured, as: :radio_buttons
  .form-actions
    = f.submit
