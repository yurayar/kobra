%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"}
%script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"}
%p#notice= notice
%h1 Listing Articles
%table
  %thead
    %tr
      %th Title
      %th Content
      %th Category
      %th Author
      %th Comments
      %th Thumbnail
      %th{:colspan => "3"}
  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.content
        %td= article.category_id
        %td= article.author_id
        %td= article.comments_id
        %td= article.thumbnail
        %td= link_to 'Show', article
%br/
